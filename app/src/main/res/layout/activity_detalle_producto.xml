<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Catalogo.DetalleProductoActivity">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFA857"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Juicy"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:gravity="center"/>

        <View android:layout_width="48dp" android:layout_height="48dp" />
    </LinearLayout>

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTotalFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAnadirCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir al carrito"
            android:backgroundTint="#FFF48C"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>

    <!-- CONTENIDO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgProductoDetalle"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="Imagen del producto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNombreDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Producto"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPrecioDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="S/ 0.00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvDescripcionDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Descripción..."
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- CANTIDAD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnRestarCantidad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/btnSumarCantidad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_margin="16dp"/>

            <!-- TRIGGER (Botón para desplegar) -->
            <LinearLayout
                android:id="@+id/triggerPersonalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personaliza tu producto"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivTogglePersonalizacion"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_down" />
            </LinearLayout>

            <!-- SECCIÓN DE PERSONALIZACIÓN (Contenedor Dinámico) -->
            <LinearLayout
                android:id="@+id/seccionPersonalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- AQUÍ ES DONDE JAVA DIBUJARÁ LOS BOTONES -->
                <LinearLayout
                    android:id="@+id/contenedorOpcionesDinamicas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp" />


            </LinearLayout>

            <!-- SECCIÓN DE VALORACIÓN -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/triggerValoracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Valora tu producto"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivToggleValoracion"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seccionValoracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu valoración"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/layoutStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_outline"
                        android:padding="2dp"/>


                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_outline"
                        android:padding="2dp"/>

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_outline"
                        android:padding="2dp"/>

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_outline"
                        android:padding="2dp"/>

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_outline"
                        android:padding="2dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Comparte tu opinión (opcional)"
                    android:minLines="2"
                    android:maxLines="4"
                    android:background="@drawable/bg_edittext_rounded"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/tvRatingResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Aún sin valoraciones"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                <TextView
                    android:id="@+id/tvVerResenas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver reseñas"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:textColor="#618163"/>

                <LinearLayout
                    android:id="@+id/layoutResenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnEnviarValoracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Enviar valoración"
                    android:backgroundTint="#FFA857"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


