<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Catalogo.DetalleProductoActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFA857"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_black" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Juicy"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:gravity="center"/>

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"> <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="#333333"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTotalFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnAnadirCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir al carrito"
            android:backgroundTint="#FFF48C"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgProductoDetalle"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="Imagen del producto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNombreDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cappuccino"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPrecioDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="S/ 10.00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvDescripcionDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Bebida caliente de café pasado con leche batida y espumosa."
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btnRestarCantidad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/btnSumarCantidad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_margin="16dp"/>

            <LinearLayout
                android:id="@+id/triggerPersonalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Personaliza tu bebida"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivTogglePersonalizacion"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seccionPersonalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"
                tools:visibility="visible"> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño de tu vaso"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroupTamaño"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    android:layout_marginTop="8dp">

                    <Button android:id="@+id/btnTamañoSmall" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Small"/>
                    <Button android:id="@+id/btnTamañoRegular" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Regular"/>
                    <Button android:id="@+id/btnTamañoAlto" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Alto"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:id="@+id/tvPrecioSmall" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Por defecto" android:gravity="center" android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView android:id="@+id/tvPrecioRegular" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Adicional s/ 1" android:gravity="center" android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                    <TextView android:id="@+id/tvPrecioAlto" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Adicional s/ 2" android:gravity="center" android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel de azúcar"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_marginTop="16dp"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroupAzucar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    android:layout_marginTop="8dp">

                    <Button android:id="@+id/btnAzucarCero" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Cero"/>
                    <Button android:id="@+id/btnAzucarBajo" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Bajo"/>
                    <Button android:id="@+id/btnAzucarNormal" style="?attr/materialButtonOutlinedStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Normal"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
