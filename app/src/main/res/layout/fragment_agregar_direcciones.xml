<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".AgregarDirecciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar dirección"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría (25 caracteres máx.)"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Casa"
            android:maxLength="25"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de vía"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etTipoVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Avenida"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de vía"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etNombreVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miguel Grau"
            android:inputType="textCapWords" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNumeroVia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1003"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departamento"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="B12"
                    android:inputType="textCapCharacters" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencia"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cerca al supermercado"
            android:inputType="textCapSentences" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chiclayo"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Es dirección principal?"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Switch
            android:id="@+id/swEsPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar como principal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tu ubicación en el mapa"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Busca tu dirección exacta"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etBuscarDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Av. Balta 123, Chiclayo"
            android:inputType="textPostalAddress"
            android:imeOptions="actionSearch"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapDireccion"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lat: -, Lng: -"
            android:textStyle="italic"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnGuardarDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar dirección"
            android:backgroundTint="#FFA54C"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
