<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".direccionesFragment">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis direcciones"
        android:textSize="22sp"
        android:layout_marginTop="24dp"

        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--  Tarjeta Casa -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCasa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="#FFA54C"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtCategoriaCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casa"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDireccionCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle Luis Gonzales, 527"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!--  Tarjeta Oficina -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOficina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="#FFA54C"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardCasa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtCategoriaOficina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oficina"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDireccionOficina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle San José, 123"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgregarDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar dirección"
        android:layout_margin="24dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#FFA54C"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardOficina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
