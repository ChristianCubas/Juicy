<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEDEF"
    android:fillViewport="true"
    tools:context=".PerfilUsuario.editarPerfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="28dp"
        android:paddingBottom="24dp">

        <!-- Título centrado -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#1B1B1B"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Correo -->
        <TextView
            android:id="@+id/lblCorreo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCorreo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                tools:text="jmartinez@gmail.com" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DNI -->
        <TextView
            android:id="@+id/lblDni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Número de DNI"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDni"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblDni"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                tools:text="75678901" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nombre -->
        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilDni"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Jose Martinez" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Apellidos (dos columnas) -->
        <TextView
            android:id="@+id/lblApellidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilApellidoP"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/lblApellidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tilApellidoM"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApellidoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Flores" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilApellidoM"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tilApellidoP"
            app:layout_constraintStart_toEndOf="@id/tilApellidoP"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApellidoM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Suarez" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Celular -->
        <TextView
            android:id="@+id/lblCelular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Número de celular"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tilApellidoP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCelular"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#EEF5FA"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblCelular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                tools:text="973 629 105" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Guardar cambios -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Guardar cambios"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFA956"
            app:cornerRadius="14dp"
            app:layout_constraintTop_toBottomOf="@id/tilCelular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
