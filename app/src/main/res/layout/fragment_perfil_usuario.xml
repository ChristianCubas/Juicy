<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F6"
    tools:context=".PerfilUsuario.PerfilUsuario">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Avatar circular -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botón para cambiar foto, superpuesto -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCambiarFoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
                app:layout_constraintEnd_toEndOf="@id/imgAvatar"
                app:maxImageSize="20dp"
                app:tint="@android:color/white" />

            <!-- Correo -->
            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/imgAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCorreo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblCorreo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    tools:text="jmartinez@gmail.com" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DNI -->
            <TextView
                android:id="@+id/lblDni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Número de DNI"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tilCorreo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDni"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblDni"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number"
                    tools:text="75678901" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nombre -->
            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tilDni"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombre"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblNombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    tools:text="Jose Martinez" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Apellidos -->
            <TextView
                android:id="@+id/lblApellidos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tilNombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilApellidoP"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblApellidos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tilApellidoM">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApellidoP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    tools:text="Flores" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilApellidoM"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@id/tilApellidoP"
                app:layout_constraintStart_toEndOf="@id/tilApellidoP"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApellidoM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    tools:text="Suarez" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Celular -->
            <TextView
                android:id="@+id/lblCelular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Número de celular"
                android:textSize="14sp"
                android:textColor="#4A4A4A"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tilApellidoP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCelular"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblCelular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="phone"
                    tools:text="973 629 105" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:text="Editar perfil"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="#FFA956"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/tilCelular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHistorial"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Historial de compras"
                android:textAllCaps="false"
                android:backgroundTint="#F8D683"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/btnEditarPerfil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_inferior" />

</LinearLayout>
