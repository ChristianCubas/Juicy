<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen del pedido"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView para los productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s/. 28.00"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Métodos de pago y entrega -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Método de pago"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/metodoPagoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VISA *1234"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrega"
            android:textSize="14sp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/entregaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle Luis Gonzales, 577"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Botón confirmar pago -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar pago"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="32dp"
        android:padding="16dp"/>
</LinearLayout>
