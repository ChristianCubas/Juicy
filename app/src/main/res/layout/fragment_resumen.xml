    </LinearLayout>

    <TextView
        android:id="@+id/tvMensajeCupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        android:text="Cupón aplicado"/>

    <!-- === DESGLOSE DE PRECIOS (AGREGADO) === -->

    <!-- Subtotal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/. 0.00"
            android:textSize="14sp"
            android:textColor="#555555"/>
    </LinearLayout>

    <!-- Descuento (Oculto por defecto) -->
    <LinearLayout
        android:id="@+id/layoutDescuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descuento"
            android:textColor="#E53935"
            android:textSize="14sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- S/. 0.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E53935"/>
    </LinearLayout>

    <!-- Total Final (Original modificado con marginTop) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s/. 28.00"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Métodos de pago y entrega -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Método de pago"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/metodoPagoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VISA *1234"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrega"
            android:textSize="14sp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/entregaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle Luis Gonzales, 577"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Botón confirmar pago -->
    <Button
        android:id="@+id/btnConfirmarPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar pago"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="32dp"
        android:padding="16dp"/>
</LinearLayout>