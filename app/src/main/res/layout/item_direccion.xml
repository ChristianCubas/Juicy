<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/rectangulo_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Categoria"
            android:textStyle="bold"
            android:textColor="#333333" />

        <ImageButton
            android:id="@+id/btnEliminarDireccion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Eliminar dirección"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/txtReferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referencia"
        android:textColor="#777777" />

    <TextView
        android:id="@+id/txtCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/txtCodigoPostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código Postal"
        android:textColor="#555555" />

    <!-- Usar RadioButton en lugar de CheckBox -->
    <RadioButton
        android:id="@+id/radioPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Principal"
        android:textColor="#555555" />
</LinearLayout>
